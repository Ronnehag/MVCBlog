@model CreateBlogViewModel

@{
    ViewData["Title"] = "Post | New Post";
}

<script src="/js/validation.js" defer></script>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 mx-auto p-3">
            <h4 class="text-center">Add new post</h4>
            <hr />

            <form asp-action="Create" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="@Model.Post.Title"></label>
                    <input maxlength="50" class="form-control" type="text" id="newPostHeadline" asp-for="@Model.Post.Title"/>
                    <div class="text-right validation-tag">
                        <span id="maxcharsHeadline">0</span>/50
                    </div>
                </div>

                <div class="form-group">
                    <label for="category">Select category:</label>
                    <select class="form-control" asp-for="@Model.Post.CategoryId"
                            asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))">
                        <option value="0">Please select one</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Post.Text"></label>
                    <textarea maxlength="2000" class="form-control" rows="10" type="text" id="newPostContent" asp-for="@Model.Post.Text"></textarea>
                    <div class="text-right validation-tag">
                        <span id="maxcharsTextarea">0</span>/2000
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>