@model Post
@{
    ViewData["Title"] = "View post | " + Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12 mx-auto col-md-6 col-sm-6">
            <div class="text-center">
                <h1>@Model.Title</h1>
                <h6 class="mt-2">
                    <span class="postTime">@Model.PostDate.ToString("MMM dd, yyyy").ToLower()</span>
                    | <span class="postedIn ml-1 mr-1">@Model.Category.Name</span> |
                </h6>
            </div>
            <hr />
            <p>@Model.Text</p>
            <div class="mt-4 text-center">
                <a asp-controller="Blog" asp-action="Index">
                    <span class="btn btn-sm btn-secondary">Back</span>
                </a>
            </div>
        </div>
    </div>
</div>


